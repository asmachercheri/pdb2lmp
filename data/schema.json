{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["molecules"],
  "additionalProperties": false,
  "properties": {
    "version": {"type": "object"},
    "notes": {"type": "string"},
    "include": {
      "type": "array",
      "uniqueItems": true,
      "items": {"type": "string"}
    },
    "molecules": {
      "type": "object",
      "additionalProperties": {"$ref": "#/definitions/molecule"}
    }
  },

  "definitions": {

    "molecule": {
      "type": "object",
      "anyOf": [
        {"required": ["templates"]},
        {"required": ["atoms"]}
      ],
      "additionalProperties": false,
      "properties": {
        "comment": {"type": "string"},
        "templates": {
          "type": "array",
          "minLength": 0,
          "items": {"type": "string"}
        },
        "polymer_type": {
          "type": "array",
          "uniqueItems": true,
          "items": {"type": "string"}
        },
        "atoms": {
          "type": "array",
          "uniqueItems": true,
          "minLength": 1,
          "items": {"$ref": "#/definitions/atom"}
        },
        "lengths": {
          "type": "array",
          "uniqueItems": true,
          "items": {"$ref": "#/definitions/length"}
        },
        "angles": {
          "type": "array",
          "uniqueItems": true,
          "items": {"$ref": "#/definitions/angle"}
        },
        "dihedrals": {
          "type": "array",
          "uniqueItems": true,
          "items": {"$ref": "#/definitions/dihedral"}
        },
        "impropers": {
          "type": "array",
          "uniqueItems": true,
          "items": {"$ref": "#/definitions/dihedral"}
        }
      }
    },

    "atom": {
      "type": "object",
      "required": ["name", "type"],
      "additionalProperties": false,
      "properties": {
        "name": {"type": "string"},
        "type": {"type": "string"},
        "charge": {"type": "number"}
      }
    },

    "length": {
      "type": "object",
      "required": ["type", "atoms"],
      "additionalProperties": false,
      "properties": {
        "type": {"type": "string"},
        "atoms": {
          "type": "array",
          "minLength": 2,
          "maxLength": 2,
          "uniqueItems": true,
          "items": {"type": "string"}
        }
      }
    },

    "angle": {
      "type": "object",
      "required": ["type", "atoms"],
      "additionalProperties": false,
      "properties": {
        "type": {"type": "string"},
        "atoms": {
          "type": "array",
          "minLength": 3,
          "maxLength": 3,
          "uniqueItems": true,
          "items": {"type": "string"}
        }
      }
    },

    "dihedral": {
      "type": "object",
      "required": ["type", "atoms"],
      "additionalProperties": false,
      "properties": {
        "type": {"type": "string"},
        "atoms": {
          "type": "array",
          "minLength": 4,
          "maxLength": 4,
          "uniqueItems": true,
          "items": {"type": "string"}
        }
      }
    }

  }
}